<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/chk_luz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingLeft="16dp"
            android:textSize="20dp"
            android:text="Luz de la nevera"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Temperatura actual"
            android:gravity="center"
            android:textSize="24dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn_bajar_tem"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/boton_redondo_activado"
                    android:textSize="24dp"
                    android:paddingBottom="4dp"
                    android:textColor="#ffffff"
                    android:text="-" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_temperatura_actual"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TemÂº"
                android:textSize="32dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btn_subir_tem"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:paddingBottom="4dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/boton_redondo_activado"
                    android:textSize="24dp"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>
        <CheckBox
            android:id="@+id/chk_activar_rango_temperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activar alertas de Temperatura"
            android:padding="16dp"/>
        <LinearLayout
            android:id="@+id/container_rango_temperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="center"
                android:text="Rango de alertas"/>
            <com.appyvet.materialrangebar.RangeBar
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rng_alerta_temperatura"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                custom:mrb_tickStart="0"
                custom:mrb_tickInterval="1"
                custom:mrb_tickEnd="24" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_temperatura_minima"
                        android:text="Min"
                        android:textSize="20dp"
                        android:layout_width="40dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/txt_temperatura_maxima"
                        android:text="Max"
                        android:textSize="20dp"
                        android:layout_width="40dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_guardar_temperatura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@color/colorAccent"
                    android:textColor="#ffffff"
                    android:text="Guardar" />
            </LinearLayout>
        </LinearLayout>
        <!-- ___________________________________________________________ -->
        <TextView
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:text="Humedad actual"
            android:gravity="center"
            android:textSize="24dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_humedad_actual"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center"
            android:text="Hum%"
            android:textSize="32dp"
            android:textStyle="bold" />
        <CheckBox
            android:id="@+id/chk_activar_rango_humedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activar alertas de Humedad"
            android:padding="16dp"/>
        <LinearLayout
            android:id="@+id/container_rango_humedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:gravity="center"
                android:text="Rango de alertas"/>
            <com.appyvet.materialrangebar.RangeBar
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rng_alerta_humedad"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                custom:mrb_tickStart="0"
                custom:mrb_tickInterval="1"
                custom:mrb_tickEnd="100" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/txt_humedad_minima"
                        android:text="Min"
                        android:textSize="20dp"
                        android:layout_width="40dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/txt_humedad_maxima"
                        android:text="Max"
                        android:textSize="20dp"
                        android:layout_width="40dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_guardar_humedad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@color/colorAccent"
                    android:textColor="#ffffff"
                    android:text="Guardar" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>